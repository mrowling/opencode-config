{
  "$schema": "https://opencode.ai/config.json",
  "server": {
    "port": 9000
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "{env:LOCAL_OLLAMA_BASE_URL}"
      },
      "models": {
        "llama2": {
          "name": "Llama 2"
        },
        "deepseek-r1:1.5b": {
          "name": "deepseek-r1:1.5b"
        }
      }
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": false
    }
  },
  "permission": {
    "read": {
      "~/.config/opencode/get-shit-done/*": "allow"
    },
    "external_directory": {
      "~/.config/opencode/get-shit-done/*": "allow"
    }
  }
}
